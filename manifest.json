{
  "manifest_version": 3,
  "name": "API + Local DB Extension",
  "version": "1.0",
  "description": "Call API and store data locally",
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.example.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}